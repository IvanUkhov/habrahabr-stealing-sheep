{
  "manifest_version": 2,

  "name": "Stop Stealing Sheep",
  "description": "The extension makes the Web a better place.",
  "author": "Ivan Ukhov",
  "version": "0.0.0.4",

  "icons": {
    "128": "images/logo128.png"
  },

  "background": {
    "scripts": [ "aws-sdk-2.0.5.min.js", "background.js" ],
    "persistent": false
  },

  "page_action": {
    "default_icon": {
      "19": "images/logo19.png",
      "38": "images/logo38.png"
    },
    "default_title": "This page has just become a better place!"
  },

  "options_page": "index.html",

  "permissions": [
    "tabs",
    "http://*/",
    "https://*/",
    "storage"
  ]
}
